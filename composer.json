{
    "name": "xypp/flarum-attached-posts",
    "description": "Allow attach a post to another and shows on its buttom area.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "小鱼飘飘",
            "email": "z@xypp.cc",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Xypp\\AttachedPosts\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Attached Posts",
            "category": "feature",
            "icon": {
                "name": "fas fa-paperclip",
                "color": "#fff",
                "backgroundColor": "#004d40"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": true,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
